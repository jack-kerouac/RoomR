<form id="flatshare_form" autocomplete="on">

    <datalist id="floornames">
        <option value="UG">
        <option value="EG">
        <option value="1. OG">
        <option value="2. OG">
        <option value="3. OG">
        <option value="4. OG">
        <option value="5. OG">
        <option value="6. OG">
        <option value="7. OG">
        <option value="8. OG">
        <option value="9. OG">
        <option value="10. OG">
    </datalist>
    <h2>WG</h2>
    <h3>Adresse</h3>

    <label for="address_street">Straße:</label>
    <input id="address_street" type="text" name="address_street" required>

    <label for="address_streetNumber">Straßennummer:</label>
    <input id="address_streetNumber" type="text" name="address_streetNumber" pattern="[0-9]{1,4}[a-z]?"
    title="Nummer (gegebenenfalls mit Zusatz)" required>

    <br>

    <label for="address_zipCode">PLZ:</label>
    <input id="address_zipCode" name="address_zipCode" type="number" min=10000 max=99999 pattern="[1-9][0-9]{4}"
    title="fünfstellige Zahl" required>
    <label for="address_city">Ort:</label>
    <input id="address_city" name="address_city" type="text" required>
    
    <br>

    <label for="floor">Etage:</label>
    <input id="floor" name="floor" type="text" list="floornames" required>

    <h3>Geolocation</h3>
    <label for="geolocation_latitude">Latitude:</label>
    <input type="text" name="geolocation_latitude" id="geolocation_latitude" value="latitude" readonly>
    <label for="geolocation_longitude">Longitude:</label>
    <input type="text" name="geolocation_longitude" id="geolocation_longitude" value="longitude" readonly>

    <br>
    <br>

    <label for="smokingtolarance">Rauchertoleranz:</label> 
    <select name="smokingtolarance" id="smokingtolarance">
        <option value="allowedInRoom">Erlaubt im Zimmer</option>
        <option value="allowedInFlat">Erlaubt in Wohnung</option>
        <option value="prohibited">Verboten</option>
    </select>

    <br>

    <label for="typeOfHouse">Haustyp:</label> 
    <select name="typeOfHouse" id="typeOfHouse">
        <option value="old">Altbau</option>
        <option value="new">Neubau</option>
        <option value="renovated">Renoviert</option>
    </select>

    <br>

    
    <label for="numberOfRooms">Anzahl der Zimmer:</label> 
    <input type="number" name="numberOfRooms" id="numberOfRooms" min=1 pattern="[1-9][0-9]*" title="Zahl" required>

    <br>
    <input type="submit">

    <script type="text/javascript">
        $(document).ready(function() {
            if (navigator.geolocation) {                
                navigator.geolocation.getCurrentPosition(  
                    function (position) { 
                        $('#geolocation_longitude').val(position.coords.longitude);
                        $('#geolocation_latitude').val(position.coords.latitude);
                    }
                );
            }
        });

    </script>

    <div id="appliances">
        <ul id="potential-appliances" class="appliance-stash">
            <li class="appliance-icon">Waschmaschine</li>
            <li class="appliance-icon">Spülmaschine</li>
            <li class="appliance-icon">Fernseher</li>
            <li class="appliance-icon">Spielkonsole</li>
        </ul>

        available
        <ul id="available-appliances" class="drop-target appliance-stash">

        </ul>        

        non-available
        <ul id="non-available-appliances" class="drop-target appliance-stash">
        </ul>
    </div>

</form>

