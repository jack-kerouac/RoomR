@import "nib/clearfix"
@import "nib/vendor"
@import "nib/gradients"

@import "src/style/photoUpload"

// Basics
*
  box-sizing border-box
body
  background: #66b0c2
  background: -moz-radial-gradient(center, ellipse cover,  #66b0c2 0%, #405e64 51%, #163538 100%)
  background: -webkit-gradient(radial, center center, 0px, center center, 100%, color-stop(0%,#66b0c2), color-stop(51%,#405e64), color-stop(100%,#163538))
  background: -webkit-radial-gradient(center, ellipse cover,  #66b0c2 0%,#405e64 51%,#163538 100%)
  background: -o-radial-gradient(center, ellipse cover,  #66b0c2 0%,#405e64 51%,#163538 100%)
  background: -ms-radial-gradient(center, ellipse cover,  #66b0c2 0%,#405e64 51%,#163538 100%)
  background: radial-gradient(center, ellipse cover,  #66b0c2 0%,#405e64 51%,#163538 100%)
  margin: 0px

// Layout
#Wrapper
  clearfix()
  background-image: url(src/style/img/RoomR_Logo.png), url(src/style/img/oben.png), url(src/style/img/unten.png)
  background-position: top center, top center, bottom center
  background-repeat: no-repeat
  padding-top: 150px 
  padding-bottom: 50px
#Main
  width 70%
  float left
#Side
  width 25%
  float right


// Design
#Wrapper, .item-bigview
  // background #FFF // url(img/bild.gif) center center no-repeat
  // margin 2em
  // border-radius(8px)
  // box-shadow(0.2em 0.2em 1.5em #999);

#Wrapper > header, #Main, #Side, .item-bigview
  padding 1em 2em

#Wrapper header nav a
  width: 20%
  max-width: 200px
  padding: 8px
  border-radius: 5px
  background: linear-gradient(top, rgb(181,196,212), rgb(133,164,189), rgb(103,145,173))
  display: block
  float: left
  margin-right: 5px
  text-align: center

// Eintrags-Gro√üansicht
.item-bigview
  position absolute
  top 15%
  left 15%
  right 15%
  bottom 15%		

// Anklickbare Sachen die kein Link sind
klickable()
  cursor pointer	
  font-weight bold
  color blue
  text-decoration underline
  &:hover
    text-decoration none
li .item-title, .clickable
  klickable()

// Thomas' furchtbare versuche...
.drop-target
  background-color: red

.active
  background-color: yellow
  
// flatshare styles
bcolor = #bebebe

input
  background-color bcolor  

.widget
  background linear-gradient(top, white, #969696)  
  border-radius 10px  
  padding 10px



.itemChoice
  stash-padding = 10px
  icon-size = 80px
  icon-margin = 5px

  ul
    width 2 * (icon-size +2 * icon-margin) + 2 * stash-padding
    height  2 * (icon-size + 2 * icon-margin) + 2 * stash-padding
    background-color: blue
    padding stash-padding

    li
      width icon-size
      height icon-size
      margin icon-margin
      display list-item
      list-style none outside none
      float left

      background-color red
      color white
      cursor move
      text-align center
      border-radius(5px)

  .dropped
    transition(all 200ms)