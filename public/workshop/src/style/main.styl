basicBorderRadius = 5px

#Navigation nav a
  display: inline-block
  width:100%
  height: 100%
  padding: 20px 8px 8px 8px
  border-radius: 0px 0px 5px 5px
  background: linear-gradient(top, rgb(181,196,212), rgb(133,164,189), rgb(103,145,173))
  box-shadow: 0px 2px 5px 0px rgba(0, 0, 0, 0.75);
  text-decoration: none
  color: black
  font-variant: small-caps;
  font-weight: bold
  &:hover
    background: linear-gradient(top,  #ffd65e 0%,#febf04 100%);

  &.outerleftbutton
    border-radius 0px 100% basicBorderRadius basicBorderRadius / 0px 15px basicBorderRadius basicBorderRadius
    padding-top: 32px

  &.outerrightbutton
    padding-top: 32px
    border-radius 100% 0px basicBorderRadius basicBorderRadius / 15px 0px basicBorderRadius basicBorderRadius

// Eintrags-Gro√üansicht
