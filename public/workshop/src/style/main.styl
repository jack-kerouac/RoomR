  cursor pointer
  font-weight bold
  color blue
  text-decoration underline
  &:hover
    text-decoration none
li .item-title, .clickable
  klickable()

// Thomas' furchtbare versuche...
.drop-target
  background-color: red

.active
  background-color: yellow
  
// flatshare styles
bcolor = #bebebe

input
  background-color bcolor  

.widget
  border 1px solid rgba(255, 255, 255, 0.4)
  border-radius: 5px
  background-color rgba(255, 255, 255, 0.4)
  box-shadow: 0px 2px 5px 0px rgba(0, 0, 0, 0.75)
  padding 10px
  margin 5px

  input
    background-color white
    box-shadow inset 0px 2px 5px 0px rgba(0, 0, 0, 0.75)
    border 1px solid rgba(255, 255, 255, 0.4)
    border-radius: 2px
    margin 5px
    padding 2px


.itemChoice
  stash-padding = 10px
  icon-size = 80px
  icon-margin = 5px
  clearfix()

  stashWidth(horizontalIcons)
    horizontalIcons * (icon-size + 2 * icon-margin) + 2 * stash-padding
  stashHeight(verticalIcons)
    verticalIcons * (icon-size + 2 * icon-margin) + 2 * stash-padding



  ul
    padding stash-padding
    float left

    &.potential
      background-color: blue
      width stashWidth(2)
      height stashHeight(2)

    &.available
      background-color: green
      width stashWidth(4)
      height stashHeight(1)

    &.non-available
      background-color: red
      width stashWidth(4)
      height stashHeight(1)

    li
      width icon-size
      height icon-size
      margin icon-margin
      display list-item
      list-style none outside none
      float left

      background-color yellow
      cursor move
      text-align center
      border-radius(5px)

  .dropped
    transition(all 200ms)

.searchResultContainer
  width: 400px
  height: 250px
  position: relative
  perspective: 800px

.searchResult
  width: 100%
  height: 100%
  position: absolute
  transform-style: preserve-3d
  -webkit-transition: -webkit-transform 1s ease-in-out
  -moz-transition: -moz-transform 1s ease-in-out
  -o-transition: -o-transform 1s ease-in-out
  -ms-transition: -ms-transform 1s ease-in-out
  
  > div
    display: block;
    position: absolute;
    width: 100%;
    height: 100%;
    backface-visibility: hidden;

.searchResultFront
  background-color: red

.searchResultBack
  background-color: blue
  transform: rotateY( 180deg )

.searchResult.rotated
  transform: rotateY( 180deg )
