  background-color: yellow
  
// flatshare styles
bcolor = #bebebe

input
  background-color bcolor  

.widget
  border 1px solid rgba(255, 255, 255, 0.4)
  border-radius: 5px
  background-color rgba(255, 255, 255, 0.4)
  box-shadow: 0px 2px 5px 0px rgba(0, 0, 0, 0.75)
  padding 10px
  margin 5px

  input
    background-color white
    box-shadow inset 0px 2px 5px 0px rgba(0, 0, 0, 0.75)
    border 1px solid rgba(255, 255, 255, 0.4)
    border-radius: 2px
    margin 5px
    margin-left 0
    //<<<<<<< Updated upstream
    padding-left 3px
    padding-right 3px
    font-size 12px
    line-height 26px
    height 26px
    &[type=submit],&[type=button] 
      border-width: 9px
      border-image: url(img/border.png) 9 9 9 9 repeat repeat;
      height: 45px
      background-clip: padding-box
      background-color white

form
  max-width 500px

  li
    list-style-type none
    float left

  ul
    clearfix()
    padding 0

  label > span:first-child
    display inline-block
    min-width 60px

  input
    margin-left 0

  input:required
    margin-bottom 0  

    + span
      display block

      &:after
        content "(Pflichtfeld)"
        font-size 12px
        margin-right 10px
    
  // break elements after the ownline element
  .breakAfter + li
    clear left

  // break elements before the ownline element
  .breakBefore
    clear left
    



#flatshare_form
  input[name=street-address]
    width 200px

  input[name=city]
    width 200px

  input[name=zip]
    width 45px

  input[name=floor]
    width 80px

 
@media screen and (min-width: 478px)
  .form li label > span
    text-align:right
  .form li input[type="radio"]+label 
    text-align:left

@media screen and (max-width: 478px)
  .form li
    float none
    input 
      width: min(100px, 100%) !important
    label > span
      display block

.searchResultContainer
  position: static
  transform-style: preserve-3d
  perspective: 1600px

.searchResult
  width: 100%
  height: 250px
  transform-style: preserve-3d
  -webkit-transition: -webkit-transform 1s ease-in-out
  -moz-transition: -moz-transform 1s ease-in-out
  -o-transition: -o-transform 1s ease-in-out
  -ms-transition: -ms-transform 1s ease-in-out

  > div
    display: block;
    position: absolute;
    width: 100%;
    height: 90%;
    backface-visibility: hidden;

.searchResultFront
  background-color: #66b0c2

.searchResultBack
  background-color: #66b0c2
  transform: rotateY( 180deg )

.searchResult.rotated
  transform: rotateY( 180deg )
