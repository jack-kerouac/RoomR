@import "nib/clearfix"
@import "nib/vendor"
@import "nib/gradients"

@import "src/style/photoUpload"
@import "src/style/start"

bg_color_out = #163538
bg_color_mid = #405e64
bg_color_in  = #66b0c2

// Basics
*
  box-sizing border-box

html
  min-height: 100%

body
  background: bg_color_in
  background: -moz-radial-gradient(center, ellipse cover,  bg_color_in 0%, bg_color_mid 51%, bg_color_out 100%)
  background: -webkit-gradient(radial, center center, 0px, center center, 100%, color-stop(0%,bg_color_in), color-stop(51%,bg_color_mid), color-stop(100%,bg_color_out))
  background: -webkit-radial-gradient(center, ellipse cover,  bg_color_in 0%,bg_color_mid 51%,bg_color_out 100%)
  background: -o-radial-gradient(center, ellipse cover,  bg_color_in 0%,bg_color_mid 51%,bg_color_out 100%)
  background: -ms-radial-gradient(center, ellipse cover,  bg_color_in 0%,bg_color_mid 51%,bg_color_out 100%)
  background: radial-gradient(center, ellipse cover,  bg_color_in 0%,bg_color_mid 51%,bg_color_out 100%)
  margin: 0px
  font-family: 'Inder', sans-serif;
  font-size: 14px

  #Headline
    visibility: hidden

