@import "nib/clearfix"
@import "nib/vendor"
@import "nib/gradients"

@import "src/style/photoUpload"
@import "src/style/offerForm"

// Basics
*
  box-sizing border-box

html
  min-height: 100%

body
  background: #66b0c2
  background: -moz-radial-gradient(center, ellipse cover,  #66b0c2 0%, #405e64 51%, #163538 100%)
  background: -webkit-gradient(radial, center center, 0px, center center, 100%, color-stop(0%,#66b0c2), color-stop(51%,#405e64), color-stop(100%,#163538))
  background: -webkit-radial-gradient(center, ellipse cover,  #66b0c2 0%,#405e64 51%,#163538 100%)
  background: -o-radial-gradient(center, ellipse cover,  #66b0c2 0%,#405e64 51%,#163538 100%)
  background: -ms-radial-gradient(center, ellipse cover,  #66b0c2 0%,#405e64 51%,#163538 100%)
  background: radial-gradient(center, ellipse cover,  #66b0c2 0%,#405e64 51%,#163538 100%)
  margin: 0px
  font-family: 'Inder', sans-serif;
  font-size: 14px

  #Headline
    visibility: hidden

// Layout
#Wrapper
  clearfix()
  background-image: url(src/style/img/RoomR_Logo.png), url(src/style/img/oben.png), url(src/style/img/unten.png)
  background-position: top center, top center, bottom center
  background-repeat: no-repeat
  padding-top: 120px 
  padding-bottom: 50px
  position: relative
  z-index: 2
  max-width: 990px
  margin: auto

#Main
  padding: 5px 10px 5px 10px

// Design
#Wrapper, .item-bigview
  // background #FFF // url(img/bild.gif) center center no-repeat
  // margin 2em
  // border-radius(8px)
  // box-shadow(0.2em 0.2em 1.5em #999);

#Wrapper > header, #Main, #Side, .item-bigview
  padding 1em 2em

#Navigation
  z-index: 1
  margin-top: -28px
  margin-bottom: 18px

  nav
    margin: auto
    width: auto
    text-align:center
    position: relative
    z-index: 1

    li
      display: inline-block
      width: 20%
      padding: 0px 3px
      max-width: 160px

    ul
      margin: 0px
      padding: 0px

    a
      display: inline-block
      width:100%
      height: 100%
      padding: 20px 8px 8px 8px
      border-radius: 0px 0px 5px 5px
      background: linear-gradient(top, rgb(181,196,212), rgb(133,164,189), rgb(103,145,173))
      box-shadow: 0px 2px 5px 0px rgba(0, 0, 0, 0.75);
      text-decoration: none
      color: black
      font-variant: small-caps;
      font-weight: bold

      &:hover
        background: linear-gradient(top,  #ffd65e 0%,#febf04 100%);

      &.outernavbutton
        padding-top: 32px

// Eintrags-Gro√üansicht
.item-bigview
  position absolute
  top 15%
  left 15%
  right 15%
  bottom 15%		

// Anklickbare Sachen die kein Link sind
klickable()
  cursor pointer	
  font-weight bold
  color blue
  text-decoration underline
  &:hover
    text-decoration none
    
li .item-title, .clickable
  klickable()

// Thomas' furchtbare versuche...
.drop-target
  background-color: red

.active
  background-color: yellow
  
// flatshare styles
bcolor = #bebebe

input
  background-color bcolor  

.widget
  border 1px solid rgba(255, 255, 255, 0.4)
  border-radius: 5px
  background-color rgba(255, 255, 255, 0.4)
  box-shadow: 0px 2px 5px 0px rgba(0, 0, 0, 0.75)
  padding 10px
  margin 5px

  input
    background-color white
    box-shadow inset 0px 2px 5px 0px rgba(0, 0, 0, 0.75)
    border 1px solid rgba(255, 255, 255, 0.4)
    border-radius: 2px
    margin 5px
    padding 2px