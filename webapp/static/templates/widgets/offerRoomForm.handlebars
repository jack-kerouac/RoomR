    <h1>Allgemeine Infos</h1>
        <fieldset>
            <ul>
                <li>
                    <label>Stockwerk</label>
                    <select data-bind="options: floorOptions, value: floor">
                    </select>
                </li>
                <div class="cleaner"></div>
                <li>
                    <label>Rauchen</label>
                    <select data-bind="options: smokingToleranceOptions, value: smokingTolerance">
                    </select>
                </li>
                <div class="cleaner"></div>
                <li>
                    <label>
                        <span>Anzahl Zimmer</span>
                            <input type="text" data-bind="value: numberOfRooms" type="number"
                             required>
                    </label>
                </li>
                <div class="cleaner"></div>
                <li>
                    <label>Haustyp</label>
                    <select data-bind="options: typeOfHouseOptions, value: typeOfHouse">
                    </select>
                </li>
                <div class="cleaner"></div>
                <li>
                    <label>Gadgets</label>
                    <select data-bind="options: gadgetOptions,  value: gadgets" size="5" multiple="true">
                    </select>
                </li>
            </ul>
        </fieldset>



    <h1>Über das Zimmer</h1>
        <fieldset>
            <ul>
                <li>
                    <label>
                        <span>Monatliche Miete</span>
                        <input data-bind="value: totalRentPerMonthInEuro" type="number"    
                        value="" required>
                    </label>
                </li>
                <div class="cleaner"></div>
                <li>
                    <label>
                        <span>Kaution</span>
                        <input data-bind="value: depositInEuro" type="number"    
                        value="" required>
                    </label>
                </li>
                <div class="cleaner"></div>
                <li>
                    <label>
                        <span>Größe des Zimmers</span>
                        <input data-bind="value: roomSize" type="number"    
                        value="" required>
                    </label>
                </li>
                <div class="cleaner"></div>
                <li>
                    <label>
                        <span>Frei von </span>
                        <input class="ageInput" data-bind="value: freeFrom" type="date"    
                          value="" required>
                        bis
                        <input class="ageInput" data-bind="value: freeTo" type="date"    
                        value="" required>
                    </label>
                </li>
                <div class="cleaner"></div>
            </ul>
        </fieldset>



    <h1>Beschreibung und Kontakt</h1>
        <fieldset>
            <ul>
                <li>
                    <label>
                        <span>Schreib was über deine WG</span>
                    </label>
                    <textarea  data-bind="value: description">
                    </textarea>
                </li>
                <div class="cleaner"></div>
                <li>
                    <label>
                        <span>Deine Email</span>
                        <input data-bind="value: contactEmail" type="email"    
                          value="" required>
                </li>
                <div class="cleaner"></div>
        </fieldset>
    <button id="offerRoomSubmitButton" type="submit">Anzeige einstellen!</button>
</form>