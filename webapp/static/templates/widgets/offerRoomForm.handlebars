<form id="create_offer_form" method="POST" autocomplete="on" class="reside">
    <h1>Wen suchst du?</h1>
    <fieldset name="seeker criteria">
        <ul>
            <li>
                <label><span data-bind="visible: gender">Geschlecht</span>
                    <label>
                        <span>
                            Männlich 
                            <input name="gender" type="radio" value="male" data-bind="checked: gender">
                        </span>
                    </label>
                    <label>
                        <span>
                            Weiblich 
                            <input name="gender" type="radio" value="female" data-bind="checked: gender">
                        </span>
                    </label>
                </label>
            </li>


            <div class="cleaner"></div>
            <li>
                <label><span>Alter</span>
                    Von  <input class="ageInput" data-bind="value: minAge" type="number"    
                          value="" required>
                    bis  <input class="ageInput" data-bind="value: maxAge" type="number"    
                          value="" required>
                </label>
            </li>
        </ul>
    </fieldset>

    <h1>Wo ist Deine WG?</h1>
    <fieldset name="flatshare">
