@import "nib/positions"

// specific styling for the start section
#Main > section#main-section
  padding 0
  margin 0

// specific styling for the start widget
.widget[data-type="start"]
  border none
  margin 0
  padding 0
  box-shadow none
  position relative
  max-width 984px
  min-height 340px

  background-image url(/images/door_lights.png)
  background-color transparent
  background-position 5px 229px
  background-repeat no-repeat

  .man, .girl
    absolute top 0 left 0
    width 300px
    height 200px

  .man
    background-image url(/images/man.png)
    background-position top center
    background-repeat no-repeat

  .girl
    margin-left 600px
    margin-top 95px
    background-image url(/images/girl.png)
    background-position top center
    background-repeat no-repeat

  .door-container
    absolute left 400px top 20px
    transform-style preserve-3d
    perspective 800px
    perspective-origin center 42%

  .door-frame
    width 163px
    height 260px
    background-image url(/images/door_frame.png)
    background-repeat no-repeat
    box-shadow 3px 2px 15px rgba(0, 0, 0, 0.6)
    transform-origin 0 50% 0
    transform rotateY(-36deg) rotateX(-6deg) rotateZ(3deg)
    transform-style preserve-3d

  .door
    width 146px
    height 247px
    absolute left 9px top 10px
    background-image url(/images/door.png)
    background-repeat no-repeat

    box-shadow 3px 2px 15px rgba(0, 0, 0, 0.6)
    transform-origin 0 50% 0
    transform-style preserve-3d
    transition all 1s ease-in-out

  .door-edge
    absolute top 0 right 0
    width 4px
    height 100%
    background-color #aa783e
    transform-origin 100% 50% 0
    transform rotateY(-90deg)

  .door-container:hover
    .door
      transform rotateY(-40deg)
      box-shadow none
