# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       controllers.Start.start()

# create room offers
GET		/createOffer							controllers.Offers.offerForm()
POST	/offers/								controllers.Offers.createOffer()

GET		/offers/								controllers.Offers.viewAll()
GET		/offers/:id								controllers.Offers.viewOffer(id: Long)

