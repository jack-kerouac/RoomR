#POST	/users									controllers.Registration.register()

# users
#GET		/users									controllers.Users.viewAll()

# applications
#POST	/applications							controllers.Applications.apply(roomOfferId: Long)

# dashboard
#GET		/dashboard								controllers.Dashboard.view()
#GET		/applications							controllers.Applications.view()


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               			controllers.Assets.at(path="/public", file)